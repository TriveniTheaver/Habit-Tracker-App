<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <!-- Header with Month/Year -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_calendar_header"
            style="@style/WellnessCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/button_prev_month"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_left"
                    android:contentDescription="Previous month" />

                <TextView
                    android:id="@+id/text_month_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="December 2024"
                    android:textAppearance="@style/TextAppearance.Wellness.H3"
                    android:textColor="@color/text_primary" />

                <ImageButton
                    android:id="@+id/button_next_month"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="Next month" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar Grid -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_calendar_grid"
            style="@style/WellnessCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_calendar_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Day Headers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sun"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Mon"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Tue"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Wed"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Thu"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fri"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sat"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Calendar Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numColumns="7"
                    tools:listitem="@layout/item_calendar_day" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Selected Day Details -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_selected_day"
            style="@style/WellnessCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_calendar_grid">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="December 15, 2024"
                    android:textAppearance="@style/TextAppearance.Wellness.H4"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/text_selected_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ˜Š Great"
                    android:textAppearance="@style/TextAppearance.Wellness.Body"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/text_selected_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Had an amazing day! Completed all my tasks."
                    android:textAppearance="@style/TextAppearance.Wellness.Body"
                    android:textColor="@color/text_primary"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
