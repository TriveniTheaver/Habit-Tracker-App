<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        style="@style/WellnessCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Icon -->
            <TextView
                android:id="@+id/text_habit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="ðŸ’ª"
                android:textSize="24sp" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Habit Name -->
                <TextView
                    android:id="@+id/text_habit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout"
                    android:textAppearance="@style/TextAppearance.Wellness.H4"
                    android:textColor="@color/text_primary" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar_habit"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:max="100"
                    android:progress="60"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/divider" />

                <!-- Progress Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_progress_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="/"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/text_progress_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/text_progress_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="minutes"
                        android:textAppearance="@style/TextAppearance.Wellness.Caption"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Completion Status -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="false" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
