<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:fillViewport="true"
        android:padding="16dp"
        android:paddingBottom="80dp"
        android:scrollbars="vertical"
        android:layerType="hardware"
        android:scrollbarStyle="outsideOverlay"
        android:fadeScrollbars="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layerType="hardware">

            <!-- Header with Month/Year -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_calendar_header"
                style="@style/WellnessCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/text_month_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="December 2024"
                        android:textAppearance="@style/TextAppearance.Wellness.H2"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_prev_month"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="&lt;"
                            android:textSize="18sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_today"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_next_month"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="&gt;"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Calendar Grid -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_calendar_grid"
                style="@style/WellnessCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_calendar_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Day Headers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sun"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mon"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tue"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Wed"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Thu"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fri"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sat"
                            android:textAppearance="@style/TextAppearance.Wellness.Caption"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Calendar Grid -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:maxHeight="400dp"
                        tools:listitem="@layout/item_calendar_day" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Selected Day Info -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_selected_day"
                style="@style/WellnessCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_calendar_grid">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Day"
                        android:textAppearance="@style/TextAppearance.Wellness.H4"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/text_selected_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="December 15, 2024"
                        android:textAppearance="@style/TextAppearance.Wellness.H3"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/text_selected_mood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ˜Š Great"
                        android:textAppearance="@style/TextAppearance.Wellness.Body"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
